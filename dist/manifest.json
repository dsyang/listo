{
    "name": "Shopo Listo",
    "version": "0.1",
    "description": "Extension that adds two buttons: save (saves the website) restore (opens all websites as tabs in a new window)",
    "manifest_version": 2,
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icon/shopolisto_icon16.png",
            "32": "icon/shopolisto_icon32.png",
            "48": "icon/shopolisto_icon48.png",
            "128": "icon/shopolisto_icon128.png"
        },
        "default_title": "See saved shopo listo items",
        "default_popup": "html/popup.html"
    },
    "icons": {
            "16": "icon/shopolisto_icon16.png",
            "32": "icon/shopolisto_icon32.png",
            "48": "icon/shopolisto_icon48.png",
            "128": "icon/shopolisto_icon128.png"
    }
}