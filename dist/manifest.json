{
    "name": "Shopo Listo",
    "version": "1.0",
    "description": "Extension that saves and restores websites",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage", "tabs", "bookmarks"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icon/shopolisto_icon16.png",
            "32": "icon/shopolisto_icon32.png",
            "48": "icon/shopolisto_icon48.png",
            "128": "icon/shopolisto_icon128.png"
        },
        "default_title": "See saved shopo listo items",
        "default_popup": "html/popup.html"
    },
    "icons": {
            "16": "icon/shopolisto_icon16.png",
            "32": "icon/shopolisto_icon32.png",
            "48": "icon/shopolisto_icon48.png",
            "128": "icon/shopolisto_icon128.png"
    }
}